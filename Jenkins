pipeline { 
agent{label'DOTNET-TERRAFORM'}
triggers { pollSCM('H */4 * * 1-5') }
stages {
	stage('git cloneing') {
		steps {
		git url: 'https://github.com/vikashpudi/openmrs-core.git' , branch: 'terraform'
		 
		}
	    }
	stage ('creating innfra') {
        steps {
            sh "pwd"
            sh 'terraform apply'
				 
        }
        }
    }
}